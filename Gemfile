source 'http://ruby.taobao.org'

# always
gem 'debugger'
gem 'yajl-ruby'

# DB
gem "bson_ext"
gem "mongoid"

# framework
gem "sinatra"
#gem "activerecord"
# Extends Sinatra with extension methods and Rake tasks for dealing with an SQL database using the ActiveRecord ORM.
#gem "sinatra-activerecord"
gem "thin"

# EM
gem 'eventmachine'
gem 'em-http-request'
gem 'em-synchrony'

gem 'sass'
gem 'nokogiri'

group :development do
  # A development server that reloads our app code on each request so we don't need to restart the server to see our changes.
  gem "shotgun"
  # A console that lets us run Ruby code in the environment of our app/database.
  gem "tux"
end

